<div>
  <label>Titre</label>
  <input type="text" name="titre" value="<%= job.title %>">
</div>
<div>
  <label>Utilisateur</label>
  <select name="user">
  <% users.forEach(user => { %>
    <% if (user.id === job.user) { %>
      <option selected label="<%= user.name %>" value="<%= user.id %>">
    <% } else { %>
      <option label="<%= user.name %>" value="<%= user.id %>">
    <% } %>
  <% }) %>
  </select>
</div>
<div>
  <label>Date de publication</label>
  <input type="date" name="publishDate" value="<%= job.publishDate == null ? '' : job.publishDate.toISOString().split('T')[0] %>">
</div>
<div>
  <label>Nombre de fichiers</label>
  <input type="number" name="fileCount" min="1" value="<%= job.fileCount %>">
</div>
<div>
  <label>SVG</label>
  <input type="file" name="svgFiles">
</div>
<div>
  <label>Infos</label>
  <textarea name="infos"><%= job.infos %></textarea>
</div>